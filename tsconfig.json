{
  "exclude": ["node_modules", "dist", "lib", "__tests__", "**/*.test*", "**/*.spec*"],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "downlevelIteration": true,
    "noImplicitAny": false,
  },
}
